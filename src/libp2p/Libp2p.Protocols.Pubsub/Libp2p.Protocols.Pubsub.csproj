<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <RootNamespace>Nethermind.Libp2p.Protocols.Pubsub</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <Description>The Gossipsub protocol of libp2p</Description>
    <PackageTags>libp2p gossipsub floodsub pubsub</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="Dto\Rpc.proto" />
    <AdditionalFiles Include="Dto\TopicDescriptor.proto" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Libp2p.Core\Libp2p.Core.csproj" />
    <ProjectReference Include="..\Libp2p.Generators.Protobuf\Libp2p.Generators.Protobuf.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="BouncyCastle.Cryptography" Aliases="BouncyCastleCryptography" />
    <PackageReference Include="Microsoft.SourceLink.GitHub">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
