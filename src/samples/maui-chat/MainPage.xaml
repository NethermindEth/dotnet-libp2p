<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:Class="MauiChat.MainPage" Title="Chat">

    <ScrollView>
        <Grid
            Padding="30,0"
           >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ScrollView Grid.ColumnSpan="2">
                <Label>
                    <Label.FormattedText>
                        <FormattedString x:Name="Content">
                            <Span Text="Name: " FontAttributes="Bold" />
                            <Span Text="message" />
                            <Span Text="{x:Static system:Environment.NewLine}"/>
                            
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </ScrollView>
            <Entry Grid.Row="1" x:Name="Msg"
                Placeholder="Enter chat message"
                Text="{Binding UserName}"
                Keyboard="Default"
                ClearButtonVisibility="WhileEditing"
                MaxLength="50"
            />
            <Button Text="Send" Grid.Row="1" Grid.Column="1" Margin="3" Clicked="Button_Clicked"></Button>
        </Grid>
    </ScrollView>

</ContentPage>
